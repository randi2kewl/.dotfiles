"*************** MAIN SETTINGS ***************"

syntax on

set tabstop=8
set shiftwidth=4
set softtabstop=4
set expandtab
set backspace=indent,eol,start
set number
set autowriteall


"*************** COLOR SCHEME ***************"

colorscheme spacegray
let g:spacegray_use_italics = 1
let g:spacegray_low_contrast = 0

hi vertsplit ctermfg=darkgrey ctermbg=bg
highlight LineNr ctermfg=darkgrey ctermbg=bg
set t_Co=256
